const fetch = require('node-fetch');

export default async (req, res) => {
    try {
        const { Cash, toCash, amount } = req.query;

        const endpoint = `https://api.exchangerate-api.com/v4/latest/USD`;
        const response = await fetch(endpoint);
        const data = await response.json();

        // Check if the currencies exist in the response
        if (data.rates && data.rates[Cash] && data.rates[toCash]) {
            // Extract the rates
            const rate_from = data.rates[Cash];
            const rate_to = data.rates[toCash];

            // Calculate the conversion
            const convertedAmount = (amount / rate_from) * rate_to;

            res.status(200).json({ convertedAmount: convertedAmount.toFixed(2) });
        } else {
            res.status(500).json({ error: "Currency pair not found in the response." });
        }
    } catch (error) {
        res.status(500).json({ error: "Server error." });
    }
};